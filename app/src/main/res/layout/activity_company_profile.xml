<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company_profile"
    android:background="@drawable/background4">

    <TextView
        android:id="@+id/myprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/personal_profile"
        android:textColor="#36454F"
        android:textSize="@dimen/personalprofile"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/nameH"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myprofile"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:text="@string/nameH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/nameH2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myprofile"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/nameH"
        android:gravity="left"
        android:text="sandun perera"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/usernameH"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameH"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/usernameH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/usernameH2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameH2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/usernameH"
        android:gravity="left"
        android:text="sandun79"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/emailH"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameH"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/emailH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/emailH2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameH2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/emailH"
        android:gravity="left"
        android:text="sandunp7@gmail.com"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/phoneH"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailH"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/phone"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/phoneH2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailH2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/emailH"
        android:gravity="left"
        android:text="0719967563"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/companyH"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneH"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/companyH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/companyH2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneH2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/companyH"
        android:gravity="left"
        android:text="glan international.pvt"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/passwordH"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/companyH"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/passwordH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/passwordH2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/companyH2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/companyH"
        android:gravity="left"
        android:text="**********"
        android:textColor="@color/black"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightPurple"
        android:text="@string/edit_profile_details"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordH2"
        android:layout_marginTop="35dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightPurple"
        android:text="@string/view_my_vacancies"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="@string/sign_out"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button2"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:clipToPadding="true"
        android:duplicateParentState="true"
        android:orientation="horizontal"
        android:layout_below="@id/button3"
        >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            app:srcCompat="@drawable/category" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            app:srcCompat="@drawable/notifications" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:cropToPadding="true"
            android:paddingRight="40dp"
            app:srcCompat="@drawable/baseline_person_outline_24" />
    </LinearLayout>






</RelativeLayout>