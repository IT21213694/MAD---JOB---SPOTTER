<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">


    <TextView

        android:id="@+id/myprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/edit_profile_details"
        android:textColor="#36454F"
        android:textSize="@dimen/editprofile"
        android:textStyle="bold"

        />
    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/propic"
        android:layout_below="@id/myprofile"
        android:layout_marginTop="15dp"
        />


    <TextView
        android:id="@+id/name"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/nameH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/name2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/name"
        android:gravity="left"
        android:text="sandun perera"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/username"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/usernameH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/username2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/username"
        android:gravity="left"
        android:text="sandun79"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/email"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/emailH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/email2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/email"
        android:gravity="left"
        android:text="sandunp7@gmail.com"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/phone"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/phoneH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/phone2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/email"
        android:gravity="left"
        android:text="0719967563"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/company"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/companyH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/company2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/company"
        android:gravity="left"
        android:text="glan international.pvt"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/password"
        android:padding="5dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/passwordH"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/password2"
        android:padding="5dp"
        android:background="#30ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/company"
        android:gravity="left"
        android:text="Your Password"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:textSize="20sp"
        />


    <Button
        android:id="@+id/updatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/lightPurple"
        android:text="@string/update_profile_details"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/deletebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#E53935"
        android:text="@string/delete_profile"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:clipToPadding="true"
        android:duplicateParentState="true"
        android:orientation="horizontal"
        android:layout_below="@id/updatebutton"
        >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            app:srcCompat="@drawable/category" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            app:srcCompat="@drawable/notifications" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:cropToPadding="true"
            android:paddingRight="40dp"
            app:srcCompat="@drawable/baseline_person_outline_24" />
    </LinearLayout>


</RelativeLayout>