<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bookmarks"
    android:background="@drawable/backgroundh">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:gravity="center"
                android:text="@string/my_bookmarks"
                android:textColor="#36454F"
                android:textSize="34sp"
                android:textStyle="bold"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/lightBlue"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/BookmarkJob1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="software engineering"
                        android:textSize="24sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"
                        />

                    <ImageView
                        android:id="@+id/delete1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@id/BookmarkJob1"
                        app:srcCompat="@drawable/delete_red"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="90dp"

                        />


                </RelativeLayout>

                <TextView
                    android:id="@+id/BookmarkDes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="we need software engineers for to develop some mobile application for our upcoming huge project"
                    android:textSize="19sp"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"


                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/lightBlue"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/BookmarkJob2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warehouse assistant"
                        android:textSize="24sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"

                        />
                    <ImageView
                        android:id="@+id/delete2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@id/BookmarkJob2"
                        app:srcCompat="@drawable/delete_red"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="90dp"

                        />


                </RelativeLayout>

                <TextView
                    android:id="@+id/BookmarkDes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="we_need_warehouse_assistants_for_our_upcoming_huge_project_highly_paid_job_8_hour_shift"
                    android:textSize="19sp"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"

                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/lightBlue"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/BookmarkJob3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:text="Network Engineer"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/delete3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@id/BookmarkJob3"
                        app:srcCompat="@drawable/delete_red"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="130dp"

                        />


                </RelativeLayout>

                <TextView
                    android:id="@+id/BookmarkDes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="we_need_network_engineers_as_soon_as_possibile_for_our_upcoming_highly_paid_sucesful_project_10_hour_shift"
                    android:textSize="19sp"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"


                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/lightBlue"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/BookmarkJob4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:text="Data Analyst"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/delete4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@id/BookmarkJob4"
                        app:srcCompat="@drawable/delete_red"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="180dp"

                        />


                </RelativeLayout>

                <TextView
                    android:id="@+id/BookmarkDes4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="we_need_highly_skilled_data_analysts_as_soon_as_possible_for_our_upcoming_highly_paid_sucesful_project_10_hour_shift"
                    android:textSize="19sp"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"


                    />
            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:clipToPadding="true"
                android:duplicateParentState="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    app:srcCompat="@drawable/home" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="80dp"
                    app:srcCompat="@drawable/category" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp"
                    app:srcCompat="@drawable/notifications" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:cropToPadding="true"
                    android:paddingRight="40dp"
                    app:srcCompat="@drawable/baseline_person_outline_24" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>