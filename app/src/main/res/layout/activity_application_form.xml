<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ApplicationForm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:text="@string/job_application"
                android:textSize="@dimen/Title"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:text="@string/personal_information"
                        android:textSize="@dimen/subtitle"

                        />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="@string/fullname"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/etAplName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/fullname"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="@dimen/tags" />

                    <EditText
                        android:id="@+id/etAplAdress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/address"
                        android:inputType="textPostalAddress"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/e_mail"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/etAplEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/e_mail"
                        android:inputType="textEmailAddress"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/etAplPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desired_pay"
                        android:textSize="20dp" />


                    <EditText
                        android:id="@+id/etAplSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/desired_pay"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/etAplGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="Male/Female"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint"  />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/employment_desired"
                        android:textSize="20dp"
                        />
                    <EditText
                        android:id="@+id/etAplTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="FullTime / PartTime"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/position_applied_for"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/etAplPosition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/type_here"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/employment_eligibility"
                        android:textSize="24dp"

                        />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/have_you_ever_worked_for_this_employer_before"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/if_yes"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date"
                        android:textSize="20dp"

                        />

                    <EditText
                        android:id="@+id/etAplStDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/start_date"
                        android:inputType="date"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date"
                        android:textSize="20dp"

                        />

                    <EditText
                        android:id="@+id/etAplEdDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="End Date"
                        android:inputType="date"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/education"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Graduate"
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/etAplGraduate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="Graduated or Not"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/degree"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/etAplDegree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/degree"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/university"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/etAplUni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/university"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/diploma"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/etAplDip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/diploma"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/college"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/etAplCollege"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:ems="10"
                        android:hint="@string/college"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/hint" />

                    <Button
                        android:id="@+id/apply_application_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/seemore"
                        android:text="Apply" />

                    <Button
                        android:id="@+id/fetch_application_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/seemore"
                        android:text="My Applications" />


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

</LinearLayout>